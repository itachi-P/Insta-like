{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "application",
            "host": {
                "sourcePath": "/var/app/current/src"
            }
        },
        {
            "name": "php-ini",
            "host": {
                "sourcePath": "/var/app/current/php-fpm/php7.3.ini"
            }
        },
        {
            "name": "nginx-sites",
            "host": {
                "sourcePath": "/var/app/current/nginx/sites"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "php-fpm",
            "image": "568975345534.dkr.ecr.ap-northeast-1.amazonaws.com/php-fpm:latest",
            "essential": true,
            "memory": 128,
            "mountPoints": [
                {
                    "sourceVolume": "application",
                    "containerPath": "/var/www"
                },
                {
                    "sourceVolume": "php-ini",
                    "containerPath": "/usr/local/etc/php/php.ini"
                }
            ]
        },
        {
            "name": "nginx",
            "image": "568975345534.dkr.ecr.ap-northeast-1.amazonaws.com/nginx:latest",
            "essential": true,
            "memory": 128,
            "mountPoints": [
                {
                    "sourceVolume": "application",
                    "containerPath": "/var/www"
                },
                {
                    "sourceVolume": "nginx-sites",
                    "containerPath": "/etc/nginx/sites-available"
                }
            ],
            "links": [
                "php-fpm"
            ],
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 80
            }]
        }
    ]
}
